  <div class="time-box">
    <div class="label">ðŸ‡ºðŸ‡¸ New York (UTC-4 / -5)</div>
    <div id="nyTime"></div>
  </div>

  <div class="time-box">
    <div class="label">ðŸ‡®ðŸ‡³ India (UTC +5:30)</div>
    <div id="inTime"></div>
  </div>

<script>
function updateTime() {
  const now = new Date();

  // New York Time
  const nyTime = new Date(now.toLocaleString("en-US", { timeZone: "America/New_York" }));

  // India Time
  const inTime = new Date(now.toLocaleString("en-US", { timeZone: "Asia/Kolkata" }));

  function format(t) {
    return t.toLocaleTimeString('en-US', { hour12:false });
  }

  document.getElementById("nyTime").innerText = format(nyTime);
  document.getElementById("inTime").innerText = format(inTime);
}

setInterval(updateTime, 1000);
updateTime();
</script>

</body>
